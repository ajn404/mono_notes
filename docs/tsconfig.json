{
    "extends": "astro/tsconfigs/base",
    "exclude": ["snippets/**/*"],
    "compilerOptions": {
        "baseUrl": "src",
        "jsx": "react-jsx",
        "allowImportingTsExtensions": true,
        
        "allowJs": true,
        "paths": {
            "@assets/*": [
                "assets/*"
            ],
            "@config": [
                "config.ts"
            ],
            "@components/*": [
                "components/*"
            ],
            "@content/*": [
                "content/*"
            ],
            "@layouts/*": [
                "layouts/*"
            ],
            "@pages/*": [
                "pages/*"
            ],
            "@styles/*": [
                "styles/*"
            ],
            "@utils/*": [
                "utils/*"
            ]
        },
    }
}