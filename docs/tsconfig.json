{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,
    "jsx": "preserve",
    "allowJs": true,
    "strictNullChecks": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@/*": ["src/*"]
    },
    "baseUrl": ".",
    "types": ["astro/client"]
  }
}
